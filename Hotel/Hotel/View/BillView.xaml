<UserControl x:Class="Hotel.View.BillView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hotel.View"
             xmlns:vm="clr-namespace:Hotel.ViewModel"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="805"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:BillViewModel />
    </UserControl.DataContext>

    <Grid Background="Transparent">
        <!--Chia khung-->
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--Color Zone-->
        <materialDesign:ColorZone Grid.Row="0"
                                  Height="45"
                                  Mode="PrimaryMid"
                                  Padding="0 6 0 0"
                                  Background="Transparent">
            <DockPanel>
                <StackPanel Orientation="Horizontal"
                            materialDesign:RippleAssist.IsCentered="True">
                    <!--Search box-->
                    <materialDesign:ColorZone Mode="Standard"
                                              Padding="8 0 8 0"
                                              CornerRadius="5"
                                              Panel.ZIndex="1"
                                              Margin="16 0 0 0"
                                              materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="250" />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Grid.Row="0"
                                    Style="{DynamicResource MaterialDesignToolButton}">
                                <materialDesign:PackIcon Kind="AccountSearch"
                                                         Opacity=".56" />
                            </Button>
                            <TextBox Grid.Column="1"
                                     FontFamily="{StaticResource Vollkorn}"
                                     x:Name="txtSearch"
                                     FontSize="18"
                                     Margin="8 0 0 0"
                                     materialDesign:HintAssist.Hint="Nhập mã hóa đơn cần tìm"
                                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                     BorderThickness="0"
                                     MinWidth="200"
                                     VerticalAlignment="Center"
                                     Text="{Binding TextToFilterBill, UpdateSourceTrigger=PropertyChanged}" />

                        </Grid>
                    </materialDesign:ColorZone>
                    <!--Button Search-->
                    <Button VerticalAlignment="Center"
                            Padding="0"
                            Margin="0 0 0 8"
                            Width="55"
                            Height="30"
                            Background="Transparent"
                            BorderThickness="0">
                        <materialDesign:PackIcon Kind="Send"
                                                 Width="30"
                                                 Height="30"
                                                 Foreground="Black"
                                                 Opacity="0.7" />
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
        <Grid Grid.Row="1"
              Grid.Column="0"
              Width="auto"
              HorizontalAlignment="Center">
            <ScrollViewer>
                <StackPanel>
                    <ItemsControl x:Name="lvBill"
                                  ItemsSource="{Binding ServiecCollection}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button x:Name="ButtonRoom"
                                        Width="300"
                                        Height="100"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="15"
                                        RenderTransformOrigin="0.5,0.5"
                                        Command="{Binding ElementName=lvBill, Path=DataContext.choseBill}"
                                        CommandParameter="{Binding}">
                                    <Button.Resources>
                                        <Style x:Key="ScaleStyle"
                                               TargetType="Grid">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Grid.ZIndex"
                                                            Value="1" />
                                                    <Setter Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="1.1"
                                                                            ScaleY="1.1" />
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Resources>
                                    <Button.Style>
                                        <Style TargetType="Button"
                                               BasedOn="{StaticResource MaterialDesignRaisedAccentButton}">
                                            <Setter Property="Background" Value="#70c2b4"></Setter>

                                            <Style.Triggers>

                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Width"
                                                            Value="310" />
                                                    <Setter Property="Height"
                                                            Value="110" />
                                                </Trigger>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Grid.ZIndex"
                                                            Value="1" />
                                                    <Setter Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="1.1"
                                                                            ScaleY="1.1" />
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding Status}"
                                                             Value="Đã hủy">
                                                    <Setter Property="Background"
                                                            Value="#ffff66"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>

                                    </Button.Style>
                                    


                                    <Grid Margin="-10 0 0 0"
                                          Width="300"
                                          Height="100"
                                          x:Name="gridName"
                                          Background="Transparent"
                                          Style="{StaticResource ScaleStyle}"
                                          RenderTransformOrigin="0.5,0.5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="85"></ColumnDefinition>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <materialDesign:PackIcon Width="75"
                                                                     Height="75"
                                                                     Margin="10 0 0 0"
                                                                     VerticalAlignment="Center"
                                                                     Kind="Dollar">

                                            </materialDesign:PackIcon>
                                        </Grid>
                                        <StackPanel Grid.Column="1"
                                                    Margin="30 0 0 0"
                                                    VerticalAlignment="Center">
                                            <TextBlock x:Name="Ten"
                                                       Text="{Binding ID}"
                                                       FontFamily="Montserrat"></TextBlock>

                                            <TextBlock x:Name="RoomID"
                                                       Text="{Binding RoomName}"
                                                       FontFamily="Montserrat"></TextBlock>

                                            <TextBlock x:Name="StaffName"
                                                       Text="{Binding StaffName}"
                                                       FontFamily="Montserrat"></TextBlock>

                                            <TextBlock x:Name="Total"
                                                       Text="{Binding Total, StringFormat={}{0:N0}}"
                                                       FontFamily="Montserrat"></TextBlock>

                                        </StackPanel>
                                    </Grid>
                                </Button>
                            </DataTemplate>

                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
